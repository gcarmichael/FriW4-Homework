<h1>Add a Recipe</h1>

<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :instructions %>
  <%= f.text_field :instructions %>
  <br>

  <%= f.label :img %>
  <%= f.text_field :img %>
  <br>

  <!-- Add Ingredients/Category data -->

  <%= f.submit 'Add Recipe' %>

<% end %>